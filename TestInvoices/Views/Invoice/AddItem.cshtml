@model AddInvoiceItemModel
@{
    ViewData["Title"] = "AddItem";
}

<h1 class="pb-2 mb-3 border-bottom">Přidat položku do faktury</h1>

<div asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group row">
        <label asp-for="Item.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Item.Description" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Item.Count" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Item.Count" type="number" step="1" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Item.PricePerOne" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Item.PricePerOne" step="0.1" class="form-control" />
        </div>
    </div>
    <input type="hidden" asp-for="InvoiceId" />
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Potvrdit</button>
    </div>
</form>

